<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


    <TextView
        android:id="@+id/tv_setup_your_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_setup"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tv_change_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_setup_your_plan"
        android:textColor="#000000"
        android:text="@string/setting_description" />

    <TextView
        android:id="@+id/space_1"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/tv_change_settings"/>

    <TextView
        android:id="@+id/space_2"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/background_1"/>

    <TextView
        android:id="@+id/space_3"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/background_2"/>

    <RelativeLayout
        android:id="@+id/background_1"
        android:layout_below="@id/space_1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_crect_1"
        android:padding="10dp">

        <TextView
            android:id="@+id/setup_wizard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setup Wizard"
            android:textColor="#ffffff"
            android:textSize="25sp" />
        <View
            android:id="@+id/view_1"
            android:layout_below="@id/setup_wizard"
            android:layout_width="50dp"
            android:layout_height="3dp"
            android:background="#ffffff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_1"
            android:text="RECOMMENDED"
            android:textSize="20sp"
            android:textColor="#ffffff"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/pie_chart_img"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/background_2"
        android:layout_below="@id/space_2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_crect_2"
        android:padding="10dp">

        <TextView
            android:id="@+id/start_from_scratch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start From Scratch"
            android:textColor="#ffffff"
            android:textSize="25sp" />
        <View
            android:id="@+id/view_2"
            android:layout_below="@id/start_from_scratch"
            android:layout_width="50dp"
            android:layout_height="3dp"
            android:background="#ffffff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_2"
            android:text="FOR EXPERTS"
            android:textSize="20sp"
            android:textColor="#ffffff"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/equilizer"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/background_3"
        android:layout_below="@id/space_3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_crect_3"
        android:padding="10dp">
        <TextView
            android:id="@+id/templates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Templates"
            android:textColor="#ffffff"
            android:textSize="25sp" />
        <View
            android:id="@+id/view_3"
            android:layout_below="@id/templates"
            android:layout_width="50dp"
            android:layout_height="3dp"
            android:background="#ffffff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_3"
            android:text="FOR COMPLETE BEGINNERS"
            android:textSize="20sp"
            android:textColor="#ffffff"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/note"/>

    </RelativeLayout>


</RelativeLayout>